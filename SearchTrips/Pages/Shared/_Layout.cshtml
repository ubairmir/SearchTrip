    <script type="text/javascript">


        $(document).ready(function () {

         
            $("#btn_enquiry_Click").click(function (e) {
                e.preventDefault();
                var name = SafeString($("#enqname").val());
                var mobile = SafeString($("#enqphone").val());
                var email = SafeString($("#enqemail").val());
                var address = SafeString($("#enqaddress").val());

                var _data = '{"Name":"' + name + '","Mobile":"' + mobile + '","Email":"' + email + '","Address":"' + address + '"}';
                SendQuotes(_data, "quotes")

            });

            $("#Feedback_submit").click(function (e) {
                e.preventDefault();
                var name = SafeString($("#fdbname").val());
                var email = SafeString($("#fdbmail").val());
                var message = SafeString($("#fdbmessage").val());

                var _data = '{"Name":"' + name + '","Email":"' + email + '","Message":"' + message + '"}';
                SendQuotes(_data, "FeedBack")

            });
        });
        function SendQuotes(_data, pass) {
            $.ajax({
                url: "/email/" + pass,
                type: "POST",
                data: _data,
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    alert(response);
                },
                failure: function (response) {
                    alert(response);

                }
            });
        }
        function SafeString(str) {
            return str.replace(/&/g, "&amp;").replace(/>/g, "&gt;").replace(/</g, "&lt;").replace(/"/g, "&quot;");
        }

    </script>
